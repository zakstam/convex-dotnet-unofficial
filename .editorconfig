root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,csx}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{json,js,ts}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# C# specific
[*.cs]
csharp_style_namespace_declarations = file_scoped:suggestion
csharp_style_prefer_top_level_statements = false:suggestion
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_constructors = when_on_single_line:suggestion
csharp_style_expression_bodied_operators = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion
csharp_style_expression_bodied_indexers = when_on_single_line:suggestion
csharp_style_expression_bodied_accessors = when_on_single_line:suggestion

# Allow var for all strongly-typed declarations (compiler ensures type safety)
csharp_style_var_when_type_is_apparent = true:silent
csharp_style_var_for_built_in_types = true:silent
csharp_style_var_elsewhere = true:silent

# Disable some CA rules that conflict with our patterns
dotnet_diagnostic.CA2007.severity = none
dotnet_diagnostic.CA1062.severity = none

# Disable CA1707 for test files (underscores in test method names are acceptable for readability)
[tests/**/*Test*.cs]
dotnet_diagnostic.CA1707.severity = none
