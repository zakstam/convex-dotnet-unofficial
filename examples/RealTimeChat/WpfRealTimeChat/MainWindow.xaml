<Window x:Class="WpfRealTimeChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRealTimeChat"
        mc:Ignorable="d"
        Title="WPF Realtime Chat" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Message Bubble Style -->
        <Style x:Key="MessageBubbleStyle" TargetType="Border">
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>
        
        <!-- Username Style -->
        <Style x:Key="UsernameStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#4A9EFF"/>
            <Setter Property="Margin" Value="0,0,8,4"/>
        </Style>
        
        <!-- Timestamp Style -->
        <Style x:Key="TimestampStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <!-- Message Text Style -->
        <Style x:Key="MessageTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <!-- Button Style -->
        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A9EFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5AAEFF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top Status Bar -->
        <Border Grid.Row="0" Background="#252525" Padding="16,12" BorderBrush="#333333" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="StatusLabel" Text="Connecting..." Foreground="#888888" FontSize="12" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock x:Name="UsernameLabel" Text="User: Anonymous" Foreground="#E0E0E0" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
                
                <ComboBox x:Name="UsernameComboBox" Grid.Column="1" Width="150" Height="28" 
                          SelectionChanged="UsernameComboBox_SelectionChanged">
                    <ComboBoxItem Content="Anonymous" IsSelected="True"/>
                    <ComboBoxItem Content="Alice"/>
                    <ComboBoxItem Content="Bob"/>
                    <ComboBoxItem Content="Charlie"/>
                    <ComboBoxItem Content="Diana"/>
                </ComboBox>
            </Grid>
        </Border>
        
        <!-- Message List -->
        <ScrollViewer x:Name="MessageScrollViewer" Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#1E1E1E"
                      Padding="16">
            <StackPanel x:Name="MessagePanel" Orientation="Vertical">
                <!-- Loading indicator -->
                <TextBlock x:Name="LoadingIndicator" 
                           Text="Loading messages..." 
                           Foreground="#888888" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Margin="0,20"
                           Visibility="Collapsed"/>
                
                <!-- Load More Button -->
                <Button x:Name="LoadMoreButton" 
                        Content="Load Older Messages" 
                        HorizontalAlignment="Center" 
                        Margin="0,10,0,10"
                        Padding="16,8"
                        Background="#2C2C2C"
                        Foreground="#E0E0E0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LoadMoreButton_Click"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3C3C3C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Input Area -->
        <Border Grid.Row="2" Background="#252525" Padding="16" BorderBrush="#333333" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="MessageTextBox" 
                         Grid.Column="0" 
                         Height="40" 
                         Background="#2C2C2C" 
                         Foreground="#E0E0E0"
                         BorderBrush="#444444"
                         BorderThickness="1"
                         Padding="12,8"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         KeyDown="MessageTextBox_KeyDown"
                         Margin="0,0,12,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#4A9EFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button x:Name="SendButton" 
                        Grid.Column="1" 
                        Content="Send" 
                        Style="{StaticResource SendButtonStyle}"
                        Click="SendButton_Click"
                        IsDefault="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>
