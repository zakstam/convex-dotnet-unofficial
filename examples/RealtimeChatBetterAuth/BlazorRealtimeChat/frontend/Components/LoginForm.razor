@using Microsoft.AspNetCore.Components
@using Convex.BetterAuth
@using Convex.BetterAuth.Models
@inject IBetterAuthService AuthService

<div class="login-container">
    <div class="login-card">
        <div class="login-icon"><i class="bi bi-chat-dots-fill"></i></div>
        <h1>Welcome to Realtime Chat</h1>
        <p class="login-subtitle">@(isSignUp ? "Create an account to get started" : "Sign in to connect and chat")</p>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }

        <div class="login-form">
            @if (isSignUp)
            {
                <input type="text"
                       @bind="nameInput"
                       @bind:event="oninput"
                       placeholder="Your name (optional)"
                       class="form-control mb-2" />
            }

            <input type="email"
                   @bind="emailInput"
                   @bind:event="oninput"
                   @onkeydown="HandleKeyDown"
                   placeholder="Email address"
                   class="form-control mb-2"
                   autofocus />

            <input type="password"
                   @bind="passwordInput"
                   @bind:event="oninput"
                   @onkeydown="HandleKeyDown"
                   placeholder="Password"
                   class="form-control mb-3" />

            @if (isSignUp)
            {
                <input type="password"
                       @bind="confirmPasswordInput"
                       @bind:event="oninput"
                       @onkeydown="HandleKeyDown"
                       placeholder="Confirm password"
                       class="form-control mb-3" />
            }

            <button type="button"
                    @onclick="HandleSubmit"
                    disabled="@(!IsFormValid || isLoading)"
                    class="login-btn">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>@(isSignUp ? "Creating account..." : "Signing in...")</span>
                }
                else
                {
                    <span>@(isSignUp ? "Create Account" : "Sign In")</span>
                    <span class="btn-arrow"><i class="bi bi-arrow-right"></i></span>
                }
            </button>

            <div class="mt-3 text-center">
                <button type="button" class="btn btn-link" @onclick="ToggleMode">
                    @(isSignUp ? "Already have an account? Sign in" : "Don't have an account? Sign up")
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnLoginSuccess { get; set; }

    private string emailInput = "";
    private string passwordInput = "";
    private string confirmPasswordInput = "";
    private string nameInput = "";
    private string? errorMessage;
    private bool isSignUp = false;
    private bool isLoading = false;

    private bool IsFormValid =>
        !string.IsNullOrWhiteSpace(emailInput) &&
        !string.IsNullOrWhiteSpace(passwordInput) &&
        emailInput.Contains("@") &&
        passwordInput.Length >= 6 &&
        (!isSignUp || passwordInput == confirmPasswordInput);

    private void ToggleMode()
    {
        isSignUp = !isSignUp;
        errorMessage = null;
        confirmPasswordInput = "";
        nameInput = "";
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && IsFormValid && !isLoading)
        {
            await HandleSubmit();
        }
    }

    private async Task HandleSubmit()
    {
        if (!IsFormValid || isLoading)
            return;

        isLoading = true;
        errorMessage = null;

        try
        {
            AuthResult result;

            if (isSignUp)
            {
                result = await AuthService.SignUpAsync(emailInput, passwordInput, nameInput);
            }
            else
            {
                result = await AuthService.SignInAsync(emailInput, passwordInput);
            }

            if (result.IsSuccess)
            {
                await OnLoginSuccess.InvokeAsync();
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Authentication failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}

